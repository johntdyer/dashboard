<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Hostname</th>
    <th>Description</th>
    <th>Slug</th>
    <th>Datacenter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.hostname %></td>
    <td><%= node.description %></td>
    <td><%= node.slug %></td>
    <td><%= node.datacenter_id %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<h1>Listing nodes</h1>

<table>
<tr>
<th>Hostname</th>
<th>Description</th>
<th>Datacenter</th>
<th></th>
<th></th>
<th></th>
</tr>

<% @nodes.each do |node| %>
  <tr>
  <td><%= node.hostname.capitalize %></td>
  <td><%= node.description.capitalize %></td>
  <td><%= node.datacenter.name.capitalize %></td>


  <td><%= link_to 'Show', node %></td>
  <% if super_admin? %>
  <td><%= link_to 'Edit', edit_node_path(node) %></td>
  <td><%= link_to 'Destroy', node, confirm: 'Are you sure?', method: :delete %></td>
  <%end%>
  </tr>
  <% end %>
  </table>

  <br />
  <% if super_admin? %>

  <%= link_to 'New Node', new_node_path %>
  <%end%>

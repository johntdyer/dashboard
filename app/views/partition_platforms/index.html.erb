<h1>Listing PPID's</h1>
<div id="ppids">
  <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
      <THEAD>
        <th>PPID</th>
        <th>Description</th>
        <th>Network</th> 
        <th></th>
      </THEAD>

      <% @partition_platforms.each do |p| %>
      <tr>     
        <td><%= p.ppid %></td>
        <td><%= p.description %></td>
        <td><%= p.network.name %></td>
        
        <td>
          <% if is_super_admin? %>
            <%= link_to raw("#{image_tag("icons/PNG-24/Info.png")}"), "/ppid/#{p.ppid}" %>
            <%= link_to raw("#{image_tag("icons/PNG-24/Modify.png")}"), edit_partition_platform_path(p) %>
            <%= link_to raw("#{image_tag("icons/PNG-24/Delete.png")}"), p, confirm: 'Are you sure?', method: :delete %></td>
          <%end%>
        </td>
      </tr>
      <% end %>
    </table>
  <br />
  </div> 
  <% if is_super_admin? %>
    <%= link_to 'New Partition platform', new_partition_platform_path %>
  <%end%>